@using BudgetMake.Presentation.Web.Helpers
@model IEnumerable<BudgetMake.Presentation.Web.ViewModel.AnnualPlanViewModel>

<p>
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-2">
                <input type="button" class="btn btn-default"
                       value="Create New" id="btnCreateNewAnnualBudgetPlan" />
            </div>
        </div>
    </div>

</p>
<table class="table" id="annualPlans">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnnualBudgetId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnnualBudgetName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnnualBudgetId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnnualBudgetName)
        </td>
        <td>
            <a href="#" annualPlanId=@item.AnnualBudgetId action="edit">Edit</a> |
            <a href="#" annualPlanId=@item.AnnualBudgetId action="delete">Delete</a> |

            @Html.ActionLink("Expand", "GetMonthlyPlans", "MonthlyPlans", new { AnnualPlanID = item.AnnualBudgetId}, null)
        </td>
    </tr>
}
</table>

@Html.Hidden("BaseResultData", TempData["OperationResult"])
@Html.bsModal("edit", "Annual Budget")

<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>
<script src="~/Scripts/pages/annual/annualplans.js"></script>