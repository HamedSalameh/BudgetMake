@model BudgetMake.Presentation.Web.ViewModel.AnnualPlanViewModel

@using (Html.BeginForm("CreatePlan", "MonthlyPlans", FormMethod.Post, new { id = "_InnerForm_CreateAnnualPlan" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AnnualPlanViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AnnualBudgetName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.AnnualBudgetName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnnualBudgetName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="button" class="btn btn-default"
                       value="Save" id="btnCreateAnnualPlan" />
                <input type="button" class="btn btn-default"
                       value="Cancel" id="btnCancel" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/pages/annual/pv_createannualplan.js"></script>