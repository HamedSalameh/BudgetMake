@model BudgetMake.Presentation.Web.ViewModel.MonthlyPlanViewModel

@using (Html.BeginForm("CreatePlan", "MonthlyPlans", FormMethod.Post, new { id = "_InnerForm_CreateMonthlyPlan" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.HiddenFor(Model => Model.AnnualBudgetId, new { id = "hdnAnnualPlanId" })

        <div class="form-group">
            @Html.LabelFor(model => model.MonthName, "Month", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EnumDropDownListFor(model => model.MonthName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BudgetForAllocation, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.BudgetForAllocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BudgetForAllocation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="button" class="btn btn-default"
                       value="Save" id="btnCreateMonthlyPlan" />
                <input type="button" class="btn btn-default"
                       value="Cancel" id="btnCancel" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/pages/month/pv_createmonthlyplan.js"></script>